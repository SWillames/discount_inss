<%= form_with(model: proponent, local: true) do |form| %>
  <% if proponent.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(proponent.errors.count, "error") %> prohibited this proponent from being saved:</h2>

      <ul>
      <% proponent.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row g-3">
    <div class="form-label-group col-md-6">
      <%= form.text_field :full_name, autofocus: true, class: "form-control", placeholder: "  " %>
      <%= form.label :full_name %>
    </div>

    <div class="form-label-group col-md-6">
      <%= form.text_field :cpf, autofocus: true, class: "form-control", placeholder: "  "  %>
      <%= form.label :cpf %>
    </div>
  </div>

  <div class="row g-3">
    <div class="form-label-group col-md-6">
      <%= form.label :birth_date %>
      <%= form.date_field :birth_date, autofocus: true, class: "form-control", placeholder: "  "   %>
    </div>

    <div class="form-label-group col-md-6">
      <%= form.email_field :email, autofocus: true, class: "form-control", placeholder: "  "  %>
      <%= form.label :email %>
    </div>
  </div>

  <div class="row g-3">
    <div class="form-label-group col-md-6">
      <%= form.text_field :personal_phone, autofocus: true, class: "form-control", placeholder: "  "  %>
      <%= form.label :personal_phone %>
    </div>

    <div class="form-label-group col-md-6">
      <%= form.text_field :reference_phone, autofocus: true, class: "form-control", placeholder: "  "  %>
      <%= form.label :reference_phone %>
    </div>
  </div>

  <div class="row g-3">
    <div class="form-label-group col-md-6">
      <%= form.text_field :salary, autofocus: true, class: "form-control", placeholder: "  "  %>
      <%= form.label :salary %>
    </div>

    <div class="form-label-group col-md-6">
      <%= form.text_field :contribution, autofocus: true, class: "form-control", placeholder: "  ", readonly: true  %>
      <%= form.label :contribution %>
    </div>
  </div>

    <h4>Endere√ßo</h4>
    <%= form.fields_for :address do |address_form| %>
      <div class="row g-3">
        <div class="form-label-group col-md-6">
          <%= address_form.text_field :zip_code, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "  ", data: {autocomplete_zipcode_provider: :zipcode}%>
          <%= address_form.label :zip_code %>
        </div>

        <div class="form-label-group col-md-6" >
          <%= address_form.text_field :public_place, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "  ", data: {autocomplete_zipcode_provider: :public_place} %>
          <%= address_form.label :public_place %>
        </div>
      </div>

      <div class="row g-3">
        <div class="form-label-group col-md-6">
          <%= address_form.text_field :complement, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "   " %>
          <%= address_form.label :complement %>
        </div>

        <div class="form-label-group col-md-6" >
          <%= address_form.text_field :district, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "   ", data: {autocomplete_zipcode_provider: :neighborhood} %>
          <%= address_form.label :district %>
        </div>
      </div>      

      <div class="row g-3">
        <div class="form-label-group col-md-6">
          <%= address_form.text_field :city, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "   ", data: {autocomplete_zipcode_provider: :city} %>
          <%= address_form.label :city %>
        </div>

          <div class="form-label-group col-md-6" >
            <%= address_form.text_field :uf, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "   ", data: {autocomplete_zipcode_provider: :state} %>
            <%= address_form.label :uf %>
          </div>
      </div>
    <% end %>

    <div class="row g-3">
  <div class="col-sm-7">
    <%= render 'proponents/buttons/back' %>
  </div>

  <div class="col-sm">  </div>

  <div class="col-sm justify-content-md-end">
    <%= render 'proponents/buttons/save' %>
  </div>
</div>
<% end %>
